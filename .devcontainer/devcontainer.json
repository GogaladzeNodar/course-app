{
	"name": "Django Dev Container",
	"dockerComposeFile": [
		"../docker-compose.yml"
	],
	"service": "django",
	"workspaceFolder": "/app",
	"features": {
		"ghcr.io/devcontainers/features/python:1": {
			"version": "3.13"
		}
	},
	"postCreateCommand": "pip install --upgrade pip && pip install --no-cache-dir -r requirements.txt",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-azuretools.vscode-docker"
			]
		}
	},
	"forwardPorts": [
		8000,
		5432
	],
	"remoteUser": "root",
	"mounts": [
		"source=${localWorkspaceFolder}/.env,target=/app/.env,type=bind",
		"source=${localWorkspaceFolder}/staticfiles,target=/app/staticfiles,type=bind",
		"source=${localWorkspaceFolder}/media,target=/app/media,type=bind"
	]
}